extends layout
block content
  form.form-inline(action='/addTask', method='POST', role='form')
    a(href="/completedAll")
      button.btn.btn-success(type='button') All done    
    .form-group
      input.form-control(type='text', name='bodyTask', placeholder='Add a new task')
    button.btn.btn-primary(type='submit') Submit
    a(href="/deleteAllToDo")
      button.btn.btn-danger(type='button') Delete all!! 
  ul.list-group
    each task in auxTasks
      li(id= task.id, class="list-group-item" style="display: inline-block; margin-right: 2px")
        span= ++counter + '.\t' +task.body
        div.pull-right(style="display: inline")
          a(href="/completed/" + task.id)
            span.glyphicon.glyphicon-ok(style="color: #fbcb39; width: 40px; text-align: center")
          a(href="/delete/" + task.id)
            span.glyphicon.glyphicon-remove(style="color: red")
        p(style="color: #92928f")= task.creationDate
  if !auxTasks.length
    h3 No tasks
           